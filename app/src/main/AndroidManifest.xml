<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.yourhome.app">

	<uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
<!--    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>-->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme"
        android:name="net.yourhome.app.util.Application">
        
        <meta-data android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />

        <activity
            android:name="net.yourhome.app.canvas.CanvasActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/CanvasTheme" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="net.yourhome.app.views.DataHistoryActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/SensorGraph"
		    >
        </activity>
        
        <activity
            android:name="net.yourhome.app.views.musicplayer.PlaylistSelectorActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_choose_playlist"
	        android:theme="@style/DialogMinWidth"
		    >
        </activity>

        <activity
            android:name="net.yourhome.app.net.discovery.DiscoveryActivityImp"
            android:label="@string/title_server_discovery" />

        <activity
            android:name="net.yourhome.app.net.discovery.ActivityMain"
            android:label="@string/app_name">
        </activity>


        <activity
            android:name="net.yourhome.app.net.discovery.ManualEntryActivity"
            android:label="@string/title_manual_entry"
          	android:theme="@style/Dialog"
            />

        <activity
            android:name="net.yourhome.app.util.ThermostatEndDatePickerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_choose_date_time" 
            android:theme="@style/SensorGraph">
        </activity>
        <activity
            android:name="net.yourhome.app.util.DatePickerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_choose_date_time" 
            android:theme="@style/Dialog">
        </activity>
         <activity
            android:name="net.yourhome.app.util.ColorPickerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_choose_color"
            android:theme="@style/Dialog">
        </activity>

        <activity
            android:name="net.yourhome.app.util.AlternativeColorPickerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_choose_color"
            android:theme="@style/Dialog">
        </activity>

        <activity android:name="net.yourhome.app.canvas.ipcamera.IPCameraActivityDialog"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="sensor"
            android:configChanges="orientation|keyboardHidden|screenSize"
       		android:theme="@style/FullscreenTheme">
            
        </activity>  
        
        
        <activity android:name="net.yourhome.app.canvas.ipcamera.IPCameraActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustResize"
       		android:theme="@style/FullscreenTheme">
        </activity>  
        
       <activity android:name="net.yourhome.app.gcm.RefreshNotificationActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustResize"
       		android:theme="@style/FullscreenTheme">
        </activity>  

        <!-- Google cloud messaging -->
        <receiver
            android:name="net.yourhome.app.gcm.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.example.gcm" />
            </intent-filter>
        </receiver>
        <service android:name="net.yourhome.app.gcm.GcmIntentService"></service>
    </application>
    

</manifest>